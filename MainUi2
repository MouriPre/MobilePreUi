-- ===== EXPLOIT UI LIBRARY - CHẠY TRÊN EXPLOIT =====
local UILibrary = {}
UILibrary.__index = UILibrary

local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")

local IsMobile = UserInputService.TouchEnabled and not UserInputService.KeyboardEnabled
local IS_PC = not IsMobile

-- Màu mặc định
local DEFAULT_COLORS = {
    Primary = Color3.fromRGB(0, 120, 215),
    Secondary = Color3.fromRGB(45, 45, 48),
    Text = Color3.fromRGB(255, 255, 255),
    Border = Color3.fromRGB(100, 100, 100)
}

-- Cấu hình responsive
local SCREEN_CONFIG = {
    MOBILE = {
        Width = 550,
        Height = 360,
        ButtonHeight = 45,
        LabelHeight = 35,
        TextBoxHeight = 40,
        Padding = 12,
        FontSize = 14
    },
    PC = {
        Width = 400,
        Height = 500,
        ButtonHeight = 40,
        LabelHeight = 30,
        TextBoxHeight = 35,
        Padding = 10,
        FontSize = 14
    }
}

local CONFIG = IsMobile and SCREEN_CONFIG.MOBILE or SCREEN_CONFIG.PC

-- Tạo panel chính
function UILibrary.CreatePanel(title, customSize)
    local screenSize = customSize or UDim2.new(0, CONFIG.Width, 0, CONFIG.Height)
    
    local panel = Instance.new("ScreenGui")
    panel.Name = "UIPanel"
    panel.ResetOnSpawn = false
    panel.Enabled = true
    panel.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")
    
    -- Background
    local background = Instance.new("Frame")
    background.Name = "Background"
    background.Size = screenSize
    background.Position = UDim2.new(0.5, -screenSize.X.Offset/2, 0.5, -screenSize.Y.Offset/2)
    background.BackgroundColor3 = DEFAULT_COLORS.Secondary
    background.BorderColor3 = DEFAULT_COLORS.Border
    background.BorderSizePixel = 2
    background.Parent = panel
    
    -- Title
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "Title"
    titleLabel.Size = UDim2.new(1, 0, 0, IsMobile and 50 or 40)
    titleLabel.BackgroundColor3 = DEFAULT_COLORS.Primary
    titleLabel.TextColor3 = DEFAULT_COLORS.Text
    titleLabel.TextSize = IsMobile and 18 or 16
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.Text = title or "UI Panel"
    titleLabel.Parent = background
    
    -- Container
    local container = Instance.new("ScrollingFrame")
    container.Name = "Container"
    container.Size = UDim2.new(1, -CONFIG.Padding*2, 1, -(IsMobile and 60 or 50))
    container.Position = UDim2.new(0, CONFIG.Padding, 0, IsMobile and 50 or 40)
    container.BackgroundTransparency = 1
    container.ScrollBarThickness = 8
    container.CanvasSize = UDim2.new(0, 0, 0, 0)
    container.Parent = background
    
    -- UIListLayout
    local listLayout = Instance.new("UIListLayout")
    listLayout.Padding = UDim.new(0, CONFIG.Padding)
    listLayout.Parent = container
    
    -- Auto update canvas size
    listLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        container.CanvasSize = UDim2.new(0, 0, 0, listLayout.AbsoluteContentSize.Y)
    end)
    
    -- Drag functionality
    if IS_PC then
        local dragging = false
        local dragInput
        local dragStart
        local startPos
        
        background.InputBegan:Connect(function(input, gameProcessed)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                dragging = true
                dragStart = input.Position
                startPos = background.Position
                dragInput = input
            end
        end)
        
        UserInputService.InputChanged:Connect(function(input, gameProcessed)
            if dragging and input == dragInput then
                local delta = input.Position - dragStart
                background.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
            end
        end)
        
        UserInputService.InputEnded:Connect(function(input, gameProcessed)
            if input == dragInput then
                dragging = false
            end
        end)
    end
    
    return background, container
end

-- Tạo nút bấm
function UILibrary.CreateButton(parent, text, callback)
    local button = Instance.new("TextButton")
    button.Name = "Button"
    button.Size = UDim2.new(1, 0, 0, CONFIG.ButtonHeight)
    button.BackgroundColor3 = DEFAULT_COLORS.Primary
    button.TextColor3 = DEFAULT_COLORS.Text
    button.TextSize = CONFIG.FontSize
    button.Font = Enum.Font.Gotham
    button.Text = text or "Button"
    button.BorderSizePixel = 0
    button.AutoButtonColor = false
    button.Parent = parent
    
    local originalColor = button.BackgroundColor3
    
    local function onPress()
        button.BackgroundColor3 = Color3.fromRGB(0, 100, 180)
    end
    
    local function onRelease()
        button.BackgroundColor3 = originalColor
        if callback then
            callback()
        end
    end
    
    button.MouseButton1Down:Connect(onPress)
    button.MouseButton1Up:Connect(onRelease)
    button.TouchTap:Connect(function()
        onPress()
        task.wait(0.1)
        onRelease()
    end)
    
    if IS_PC then
        button.MouseEnter:Connect(function()
            button.BackgroundColor3 = Color3.fromRGB(0, 140, 230)
        end)
        button.MouseLeave:Connect(function()
            button.BackgroundColor3 = originalColor
        end)
    end
    
    return button
end

-- Tạo label
function UILibrary.CreateLabel(parent, text)
    local label = Instance.new("TextLabel")
    label.Name = "Label"
    label.Size = UDim2.new(1, 0, 0, CONFIG.LabelHeight)
    label.BackgroundTransparency = 1
    label.TextColor3 = DEFAULT_COLORS.Text
    label.TextSize = CONFIG.FontSize
    label.Font = Enum.Font.Gotham
    label.Text = text or "Label"
    label.TextWrapped = true
    label.Parent = parent
    return label
end

-- Tạo TextBox
function UILibrary.CreateTextBox(parent, placeholder)
    local textBox = Instance.new("TextBox")
    textBox.Name = "TextBox"
    textBox.Size = UDim2.new(1, 0, 0, CONFIG.TextBoxHeight)
    textBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    textBox.TextColor3 = DEFAULT_COLORS.Text
    textBox.TextSize = CONFIG.FontSize
    textBox.Font = Enum.Font.Gotham
    textBox.PlaceholderText = placeholder or "Nhập text..."
    textBox.PlaceholderColor3 = Color3.fromRGB(150, 150, 150)
    textBox.BorderColor3 = DEFAULT_COLORS.Border
    textBox.BorderSizePixel = 1
    textBox.ClearTextOnFocus = false
    textBox.Parent = parent
    return textBox
end

-- Tạo Checkbox
function UILibrary.CreateCheckbox(parent, labelText, callback)
    local container = Instance.new("Frame")
    container.Name = "Checkbox"
    container.Size = UDim2.new(1, 0, 0, CONFIG.ButtonHeight)
    container.BackgroundTransparency = 1
    container.Parent = parent
    
    local checkbox = Instance.new("TextButton")
    checkbox.Name = "Box"
    checkbox.Size = UDim2.new(0, 25, 0, 25)
    checkbox.Position = UDim2.new(0, 0, 0.5, -12)
    checkbox.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    checkbox.TextSize = 0
    checkbox.BorderSizePixel = 0
    checkbox.AutoButtonColor = false
    checkbox.Parent = container
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -35, 1, 0)
    label.Position = UDim2.new(0, 35, 0, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = DEFAULT_COLORS.Text
    label.TextSize = CONFIG.FontSize
    label.Font = Enum.Font.Gotham
    label.Text = labelText or "Option"
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = container
    
    local isChecked = false
    
    local function toggle()
        isChecked = not isChecked
        checkbox.BackgroundColor3 = isChecked and DEFAULT_COLORS.Primary or Color3.fromRGB(100, 100, 100)
        if callback then callback(isChecked) end
    end
    
    checkbox.MouseButton1Click:Connect(toggle)
    checkbox.TouchTap:Connect(toggle)
    
    return container, checkbox
end

-- Tạo Slider
function UILibrary.CreateSlider(parent, minValue, maxValue, defaultValue, callback)
    local container = Instance.new("Frame")
    container.Name = "Slider"
    container.Size = UDim2.new(1, 0, 0, CONFIG.ButtonHeight + 10)
    container.BackgroundTransparency = 1
    container.Parent = parent
    
    local background = Instance.new("Frame")
    background.Size = UDim2.new(1, 0, 0, 5)
    background.Position = UDim2.new(0, 0, 0.3, -2)
    background.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    background.BorderSizePixel = 0
    background.Parent = container
    
    local thumb = Instance.new("TextButton")
    thumb.Name = "Thumb"
    thumb.Size = UDim2.new(0, 20, 0, 20)
    thumb.Position = UDim2.new(0, 0, 0.3, -7)
    thumb.BackgroundColor3 = DEFAULT_COLORS.Primary
    thumb.TextSize = 0
    thumb.BorderSizePixel = 0
    thumb.AutoButtonColor = false
    thumb.Parent = container
    
    local valueLabel = Instance.new("TextLabel")
    valueLabel.Size = UDim2.new(1, 0, 0, 20)
    valueLabel.Position = UDim2.new(0, 0, 0.65, 0)
    valueLabel.BackgroundTransparency = 1
    valueLabel.TextColor3 = DEFAULT_COLORS.Text
    valueLabel.TextSize = CONFIG.FontSize
    valueLabel.Font = Enum.Font.Gotham
    valueLabel.Parent = container
    
    local value = defaultValue or minValue
    local isDragging = false
    
    local function updateSlider(inputPos)
        local size = background.AbsoluteSize.X
        local pos = math.max(0, math.min(inputPos - background.AbsolutePosition.X, size))
        local percent = pos / size
        value = minValue + (maxValue - minValue) * percent
        thumb.Position = UDim2.new(0, (size - 20) * percent, 0.3, -7)
        valueLabel.Text = string.format("%.0f", value)
        if callback then callback(value) end
    end
    
    thumb.MouseButton1Down:Connect(function() isDragging = true end)
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then isDragging = false end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if isDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            updateSlider(input.Position.X)
        end
    end)
    
    thumb.TouchBegan:Connect(function() isDragging = true end)
    thumb.TouchEnded:Connect(function() isDragging = false end)
    thumb.TouchMoved:Connect(function(touch)
        if isDragging then updateSlider(touch.Position.X) end
    end)
    
    valueLabel.Text = string.format("%.0f", value)
    return container
end

return UILibrary

